<h1>The Original Kanto Pokemon</h1>


<form action="<%=pokemons_home_path%>" method = "GET">
  <label for="poke_name"></label>
  <input type="text" name="pokemon_name" id="poke_name" style="width:50%">
  <input type="submit" value="Search">
</form>

<section class="home-container">
<table class="highlight">
  <thead>
    <tr>
        <th>Image</th>
        <th>#</th>
        <th>Name</th>
    </tr>
  </thead>

  <tbody>
 
  <% @all_pokemon.each do |pok| %>

    <tr>
      <td> <%= image_tag pok[:image]%></td>
      <td> <%= pok[:num] %>  </td>
      <td> <%= pok[:name].capitalize %> </td>
      <td> <%= link_to 'FIND OUT MORE', pokemons_show_path(pok[:name]), :class => 'find-out-more' %> </td>
    </tr>
  <% end %>

  </tbody>
</table>
</section>




